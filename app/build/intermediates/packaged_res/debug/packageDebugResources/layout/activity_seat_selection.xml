<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/primary_blue"
        android:elevation="4dp">
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Seat"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
            
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on an available seat to select"
            android:textSize="14sp"
            android:textColor="#BBDEFB"
            android:layout_marginTop="4dp"/>
            
    </LinearLayout>
    
    <!-- Plane Nose Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/plane_nose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœˆ FRONT"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Selected Seat Info (Top) -->
    <LinearLayout
        android:id="@+id/selected_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Seat"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

            <TextView
                android:id="@+id/tv_selected_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

            <TextView
                android:id="@+id/tv_selected_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Seat Map in ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        
        <com.npairlines.ui.seat.SeatMapView
            android:id="@+id/seat_map_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"/>
            
    </ScrollView>
    


    <!-- Continue Button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Continue to Booking"
        android:textSize="16sp"
        android:enabled="false"
        android:backgroundTint="@color/primary_blue"/>

</LinearLayout>
